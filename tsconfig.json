{
     "compilerOptions": {
          "target": "es5",
          "lib": [
               "dom",
               "dom.iterable",
               "esnext"
          ],
          "allowJs": true,
          "checkJs": true,
          "skipLibCheck": true,
          "esModuleInterop": true,
          "allowSyntheticDefaultImports": true,
          "strict": true,
          "strictNullChecks": true,
          "forceConsistentCasingInFileNames": true,
          "module": "esnext",
          "moduleResolution": "node",
          "resolveJsonModule": true,
          "noEmit": true,
          "jsx": "react",
          "declaration": true,
          "isolatedModules": true
     },
     "include": [
          "src"
     ],
     "exclude": [
          "node_modules",
          "build"
     ]
}